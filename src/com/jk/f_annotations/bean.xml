<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!--
        开启组件扫描：
            1 如果扫描多个包，多个包之间使用逗号隔开，如：com.jk.f_annotations.dao,com.jk.f_annotations.service
            2 简化扫描：直接用同级包的上层目录：com.jk.f_annotations
    -->
    <context:component-scan base-package="com.jk.f_annotations"/>

    <!--扫描规则配置-->
    <!--
        示例一：
            use-default-filters=“false”：表示不使用默认的filter，而是用自己配置的filter，效果是不扫描所有类
            context:include-filter：设置扫描内容
            以下配置扫描规则：
                只扫描 Controller 标注的类
    -->
    <!--<context:component-scan base-package="com.jk.f_annotations" use-default-filters="false">-->
    <!--    <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>-->
    <!--</context:component-scan>-->

    <!--
        示例二：
            context:exclude-filter ：表示设置哪些内容不进行扫描，效果是扫描除配置类以外的所有类
            以下配置扫描规则：
                    扫描除了使用 Controller 标注的类以外的所有类。
    -->
    <!--<context:component-scan base-package="com.jk.f_annotations">-->
    <!--    <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>-->
    <!--</context:component-scan>-->
</beans>
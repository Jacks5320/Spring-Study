<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--集合类型注入-->
    <bean id="demo1" class="com.jk.b_DI_xml.collection.Demo1">
        <!--数组注入-->
        <property name="courses">
            <array>
                <value>Java</value>
                <value>数据库</value>
            </array>
        </property>
        <!--list注入-->
        <property name="list">
            <list>
                <value>Java</value>
                <value>数据库</value>
            </list>
        </property>
        <!--set注入-->
        <property name="sets">
            <set>
                <value>Java</value>
                <value>数据库</value>
            </set>
        </property>
        <!--Map注入-->
        <property name="map">
            <map>
                <entry key="课程1" value="Java"/>
                <entry key="课程2" value="数据库"/>
            </map>
        </property>
    </bean>
</beans>
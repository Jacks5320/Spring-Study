<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--注入实体类-->
    <bean id="account" class="com.jk.domain.Account"/>
    <!--注入 DataSource-->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/example?serverTimezone=Asia/Shanghai"/>
        <property name="username" value="root"/>
        <property name="password" value="root"/>
    </bean>
    <!--注入 JdbcTemplate-->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="accountDao" class="com.jk.dao.impl.AccountDaoImpl">
        <!--持久层实现类继承 JdbcDaoSupport 后，不需要我们自己再手动写 setter 类注入了-->
        <!--<property name="jt" ref="jdbcTemplate"/>-->
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
</beans>